---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "genre"    : "{{ post.genre | join: ', ' }}", 
      "author"   : "{{ post.author | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",

      "image"    : {{ post.image | jsonify }}, 

      "rating"   : "{{ post.rating }}",
      "stars_html": {% capture star_output %}{% include stars.html rating=post.rating %}{% endcapture %}{{ star_output | jsonify }}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
